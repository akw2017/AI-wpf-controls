                                    <GradientStop Color="{TemplateBinding Background}"
                                                  Offset="0.0" />
                                    <GradientStop Color="Blue"
                                                  Offset="0.25" />
                                    <GradientStop Color="Blue"
                                                  Offset="0.75" />
                                    <GradientStop Color="{TemplateBinding Background}"
