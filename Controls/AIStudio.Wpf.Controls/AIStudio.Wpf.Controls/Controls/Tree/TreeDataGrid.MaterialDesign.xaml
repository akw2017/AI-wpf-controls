<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:AIStudio.Wpf.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/AIStudio.Wpf.Controls;component/Styles/MaterialDesign/DataGrid.xaml"/>
    </ResourceDictionary.MergedDictionaries>    

    <Style TargetType="{x:Type controls:TreeDataGrid}" BasedOn="{StaticResource AIStudio.Styles.DataGrid}">
        <Setter Property="CanUserSortColumns" Value="False"/>
    </Style>
</ResourceDictionary>