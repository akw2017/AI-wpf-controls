                                                  Padding="6,0"
                                                  BorderThickness="0"
                                                  Delay="{TemplateBinding Delay}"
                                                  Foreground="{TemplateBinding Foreground}"
                                                  IsTabStop="False"
                                                  Focusable="False"       
                                                  controls:ControlAttach.CornerRadius="0"
