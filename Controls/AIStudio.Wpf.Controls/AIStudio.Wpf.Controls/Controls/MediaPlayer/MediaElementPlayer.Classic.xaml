    </Style>

    <!-- 音量样式 （外部调用） -->
    <Style x:Key="Slider_CustomStyle_Vol" TargetType="{x:Type Slider}">
        <Setter Property="Focusable" Value="false" />
        <Setter Property="Foreground" Value="#FFBC3232"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Slider}">
                    <Track x:Name="PART_Track">
                        <Track.DecreaseRepeatButton>
                            <RepeatButton Style="{StaticResource Slider_RepeatButton_Left_Vol}" Command="Slider.DecreaseLarge"/>
                        </Track.DecreaseRepeatButton>
                        <Track.IncreaseRepeatButton>
                            <RepeatButton Style="{StaticResource Slider_RepeatButton_Right_Vol}" Command="Slider.IncreaseLarge"/>
                        </Track.IncreaseRepeatButton>
                        <Track.Thumb>
                            <Thumb x:Name="S_Thumb_" Visibility="Collapsed" Style="{StaticResource Slider_Thumb_Vol}"/>
                        </Track.Thumb>
                    </Track>

                    <!-- 鼠标经过 显示音量滑块-->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Visibility" TargetName="S_Thumb_" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

