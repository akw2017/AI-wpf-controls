        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <!--滑块-->
                    <Border x:Name="border_point" CornerRadius="8" Background="White" Width="16" Height="16">
                        <Border Width="6" Height="6" CornerRadius="3"  Background="{Binding Foreground,RelativeSource={RelativeSource FindAncestor, AncestorType=Slider}}"></Border>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border_point" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Direction="0" Color="White" ShadowDepth="0" BlurRadius="5"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

